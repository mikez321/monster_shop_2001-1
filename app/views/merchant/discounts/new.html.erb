<h1>Add a new Discount</h1>

<%= form_for @discount, url: "/merchant/discounts/new", method: :post do |f| %>
  <%= f.label = :name  %>
  <%= f.text_field = :name  %><br>
  <%= f.label = :description  %>
  <%= f.text_field = :description  %><br>
  <%= f.label = :percent  %>
  <%= f.text_field = :percent  %><br>
  <%= f.label = :quantity  %>
  <%= f.text_field = :quantity  %><br>
<% end %>
