<h1><%= @merchant.name%></h1>
<center>
  Address: <b><%=@merchant.address%></b></br>
  City: <b><%=@merchant.city%></b></br>
  State: <b><%=@merchant.state%></b></br>
  Zip: <b><%=@merchant.zip%></b>
  <p><%= link_to "My Items", "/merchant/items", method: :get %></p>
  <p><%= link_to "My Discounts", "/merchant/discounts", method: :get %></p>
</center>

<h2>Orders for <%=@merchant.name %>:</h2>

<%@merchant.pending_orders.each do |order| %>
   <section id="Order-<%=order.id%>">
     <%=link_to "Order Number: #{order.id}", "/merchant/orders/#{order.id}" %><br>
     <h3><%= order.created_at.to_date %></h3>
     <h3>Total Quantity: <%= order.merchant_item_quantity(@merchant.id) %></h3>
     <h3>Total Value: $<%= order.merchant_item_subtotal(@merchant.id) %></h3>
  </section>
<%end %>

<section>
  <h2>"To Do:"</h2>
  <section class="images">
    <p>The following items do not have an image:</p>
    <% @merchant.items_without_images.each do |item|%>
      <%= link_to "#{item.name}", "/merchant/items/#{item.id}/edit" %><br>
    <% end %>
  </section>
</section>
<section class="unfulfilled">
  <h2>You have <%= @merchant.num_pending_orders %> orders worth <%= @merchant.pending_money %>.</h2>
</section>
