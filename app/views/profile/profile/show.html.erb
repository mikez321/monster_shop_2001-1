
<h1>Logged in as <%= @user.name %>! </h1>
<section class="user-info">
  <ul>
    <% @user.info.each do |category, info| %>
      <li><%= category.capitalize %>: <%= info %></li>
    <% end %>
  </ul>
  <div class="profile-edit-button">
     <%= link_to "Edit Profile", "/profile/#{@user.id}/edit" %>
  </div>
  <div class="pw-change-button">
    <%= link_to "Change Password", "/profile/password/edit"%>
  </div>
    <%= link_to "My Orders", "/profile/orders"%>
</section>
